<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clothesfashion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashScreen"></activity>
        <activity
            android:name=".BoysSuit"
            android:parentActivityName=".Boys" />
        <activity
            android:name=".BoysShirts"
            android:parentActivityName=".Boys" />
        <activity
            android:name=".BoysTrouser"
            android:parentActivityName=".Boys" />
        <activity
            android:name=".GirlsDress"
            android:parentActivityName=".Girls" />
        <activity
            android:name=".GirlsShirts"
            android:parentActivityName=".Girls" />
        <activity
            android:name=".GirlsTrouser"
            android:parentActivityName=".Girls" />
        <activity
            android:name=".Boys"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Girls"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Home"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Register"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>